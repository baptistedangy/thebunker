<div class="home-banner">
  <%= render "shared/search_form" %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.home-designing.com/wp-content/uploads/2020/07/round-skylight.jpg);">
      <div class="container">
        <h1 class="a-primary">Checkout our Bunkers</h1>
        <br>
        <br>
        <p><span id="banner-typed-text"></span></p>
      </div>
    </div>
    <br>
    <br>
    <div class="cards mt-5">
    <% Bunker.all.first(3).each do |bunker| %>
      <div class="card-category">
        <div class="card-trip">
          <%= link_to bunker_path(bunker) do %>
            <%= cl_image_tag bunker.photo.key %>
          <% end%>
          <div class="card-trip-infos">
            <div>
              <h2><%= bunker.name %></h2>
              <p><%= bunker.description %></p>
            </div>
            <h2 class="card-trip-pricing">â‚¬<%= bunker.price %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
