<div class="container">

  <div class="bunker-show">

      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= cl_image_path @bunker.photo.key %>')">
        <div class="name">
          <h1> <%= @bunker.name %></h1>
        </div>
        <div class="tags">
          <h2> <%= @bunker.price %>â‚¬</h2>
          <p class="ml-4"> <%= @bunker.capacity %> <i class="fas fa-bed"></i> </p>
        </div>
      </div>

      <div class="details">

        <div class="description">
          <p class="text-center"><%= @bunker.description%><p>
          <p class="text-center"> <i class="fas fa-map-marked-alt"></i> <%= @bunker.address %></p>
        </div>

        <div class="booking_form">
          <div class="form">
            <%= simple_form_for [@bunker, @booking] do |f| %>
              <%= f.input :start_date, as: :string, input_html: { type: :date, class: 'recognitionStyling' }, placeholder: "" %>
              <%= f.input :end_date, as: :string, input_html: { type: :date, class: 'recognitionStyling' }, placeholder: "" %>
              <%= f.input :nb_participants, input_html: { class: 'recognitionStyling' }, placeholder: "1" %>
              <%= f.submit "Book now", class: 'btn' %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>









