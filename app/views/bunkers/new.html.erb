<div class="container text-center mt-5">
  <h1> Add your bunker !!!</h1>
  <div class="form_size">
    <%= simple_form_for @bunker, input_html: { class: "form-inline"} do |f| %>
      <%= f.input :name, placeholder: "Name" %>
      <%= f.input :address, placeholder: "Address" %>
      <div class="flexbox-class">
        <%= f.input :price, placeholder: "Price" %>
        <%= f.input :capacity, placeholder: "Capacity" %>
      </div>
      <%= f.input :description,:as => :text, :input_html => {:rows => 6}, placeholder: "Description" %>
      <%= f.input :photo, input_html: {  class: 'd-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
      <%= f.button :submit, id: 'submit-button' %>
    <% end %>
  </div>
</div>
