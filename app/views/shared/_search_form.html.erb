  <div class="search-form">
    <%= simple_form_for :search, url: bunkers_path, method: :get do |f| %>
      <div class="search-form-control form-group">
       <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="City" />
       <%= f.input :start_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: "Start Date" %>
       <%= f.input :end_date, as: :string, required: false,label: false, input_html: {class: "datepicker"}, placeholder: "End Date" %>
       <button name="button" type="submit" class="btn btn-flat">
         <i class="fas fa-search"></i> Search
       </button>
      </div>
    <% end %>
  </div>



